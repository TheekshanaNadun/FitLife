<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fitlife.ManageBookingController"
            prefWidth="1000" prefHeight="700"
            stylesheets="@style.css"
            style="-fx-background-color: #f9fafc;">

    <!-- 🔹 Top Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 0, 1);">
            <Button text="← Back" onAction="#goBack"
                    style="-fx-background-color: transparent; -fx-font-size: 14; -fx-text-fill: #333;"/>
            <Label text="Manage Bookings" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- 🔹 Center Content -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER">
            <padding>
                <Insets top="25" right="20" bottom="20" left="20"/>
            </padding>

            <!-- 🔸 Booking Form (2 Columns) -->
            <GridPane hgap="20" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                </columnConstraints>

                <!-- Left Column -->
                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Full Name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Contact Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="contactField" promptText="0712345678"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Membership Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="membershipField" promptText="Select Type"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Right Column -->
                <Label text="Program:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <ComboBox fx:id="programField" promptText="Select Program"
                          GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Start Date:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <DatePicker fx:id="startDateField"
                            GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Number of Sessions:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="sessionsField" promptText="e.g. 10"
                           onKeyReleased="#calculateTotalCost"
                           GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <Label text="Total Cost (Rs):" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <TextField fx:id="totalCostField" editable="false"
                           GridPane.rowIndex="3" GridPane.columnIndex="3"
                           style="-fx-background-color: #f2f2f2; -fx-border-color: #ccc; -fx-background-radius: 6;"/>
            </GridPane>

            <!-- 🔸 Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Create" onAction="#createBooking"
                        style="-fx-background-color: #00aaff; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Edit" onAction="#editBooking"
                        style="-fx-background-color: #ffaa00; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Delete" onAction="#deleteBooking"
                        style="-fx-background-color: #ff4b5c; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Reset" onAction="#clearFields"
                        style="-fx-background-color: #cccccc; -fx-text-fill: #333; -fx-background-radius: 6; -fx-font-weight: bold;"/>
            </HBox>

            <!-- 🔸 Booking Table (Modern Style) -->
            <TableView fx:id="bookingTable" prefWidth="900" prefHeight="300" styleClass="modern-table">
                <columns>
                    <TableColumn fx:id="colBookingId" text="Booking ID" prefWidth="90"/>
                    <TableColumn fx:id="colName" text="Full Name" prefWidth="150"/>
                    <TableColumn fx:id="colContact" text="Contact" prefWidth="110"/>
                    <TableColumn fx:id="colMembership" text="Membership" prefWidth="120"/>
                    <TableColumn fx:id="colProgram" text="Program" prefWidth="120"/>
                    <TableColumn fx:id="colStartDate" text="Start Date" prefWidth="100"/>
                    <TableColumn fx:id="colSessions" text="Sessions" prefWidth="80"/>
                    <TableColumn fx:id="colTotalCost" text="Total Cost (Rs)" prefWidth="110"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
