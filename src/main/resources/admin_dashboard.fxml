<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fitlife.AdminDashboardController"
            fx:id="mainBorderPane"
            prefWidth="1220" prefHeight="720"
            stylesheets="@style.css"
            styleClass="root">

    <!-- 🔹 Top Header -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="top-bar">
            <Label text="Admin Dashboard" styleClass="header-title" HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#logout" styleClass="btn-secondary" />
            <Button text="Exit" onAction="#exitApp" styleClass="btn-exit" />
        </HBox>
    </top>

    <!-- 🔹 Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="40" styleClass="dashboard-center">
            <Label text="Welcome, Admin" styleClass="welcome-title" />

            <HBox alignment="CENTER" spacing="60">
                <!-- 👤 Manage Staff -->
                <VBox fx:id="staffCard" alignment="CENTER" spacing="15" styleClass="card">
                    <Label text="👤" styleClass="card-icon"/>
                    <Label text="Manage Staff" styleClass="card-title"/>
                    <Button text="Open" onAction="#openManageStaff" styleClass="btn-primary"/>
                </VBox>

                <!-- 🏋️ Manage Programs -->
                <VBox fx:id="programCard" alignment="CENTER" spacing="15" styleClass="card">
                    <Label text="🏋️" styleClass="card-icon"/>
                    <Label text="Manage Programs" styleClass="card-title"/>
                    <Button text="Open" onAction="#openManagePrograms" styleClass="btn-primary"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
