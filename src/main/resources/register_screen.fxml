<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fitlife.RegisterController"
            prefWidth="1220" prefHeight="720"
            stylesheets="@style.css"
            style="-fx-background-color: #f9fafc;">

    <!-- ðŸ”¹ Left Branding Panel -->
    <left>
        <VBox alignment="CENTER"
              prefWidth="420"
              VBox.vgrow="ALWAYS"
              style="-fx-background-color: linear-gradient(to bottom right, #009688, #00796B);
                     -fx-padding: 40;">
            <Label text="FitLife Gym"
                   style="-fx-text-fill: white;
                          -fx-font-size: 38px;
                          -fx-font-weight: bold;"/>
            <Label text="Join the FitLife Family"
                   style="-fx-text-fill: #e0f2f1;
                          -fx-font-size: 17px;
                          -fx-font-weight: 500;"/>
        </VBox>
    </left>

    <!-- ðŸ”¹ Right Register Area -->
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="30" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">

                <!-- Register Card -->
                <StackPane style="-fx-background-color: white;
                                  -fx-background-radius: 20;
                                  -fx-padding: 50;
                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 4);
                                  -fx-max-width: 400;">
                    <VBox alignment="CENTER" spacing="22">
                        <Label text="Create Account"
                               style="-fx-text-fill: #333;
                                      -fx-font-size: 28px;
                                      -fx-font-weight: bold;"/>

                        <!-- Username -->
                        <TextField fx:id="usernameField"
                                   promptText="Username"
                                   style="-fx-background-color: #f9fafc;
                                          -fx-text-fill: #333;
                                          -fx-prompt-text-fill: #999;
                                          -fx-background-radius: 8;
                                          -fx-border-radius: 8;
                                          -fx-border-color: #ddd;
                                          -fx-font-size: 14px;
                                          -fx-pref-width: 260;
                                          -fx-padding: 10 15;"/>

                        <!-- Password -->
                        <PasswordField fx:id="passwordField"
                                       promptText="Password"
                                       style="-fx-background-color: #f9fafc;
                                              -fx-text-fill: #333;
                                              -fx-prompt-text-fill: #999;
                                              -fx-background-radius: 8;
                                              -fx-border-radius: 8;
                                              -fx-border-color: #ddd;
                                              -fx-font-size: 14px;
                                              -fx-pref-width: 260;
                                              -fx-padding: 10 15;"/>

                        <!-- Confirm Password -->
                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="Confirm Password"
                                       style="-fx-background-color: #f9fafc;
                                              -fx-text-fill: #333;
                                              -fx-prompt-text-fill: #999;
                                              -fx-background-radius: 8;
                                              -fx-border-radius: 8;
                                              -fx-border-color: #ddd;
                                              -fx-font-size: 14px;
                                              -fx-pref-width: 260;
                                              -fx-padding: 10 15;"/>

                        <!-- Buttons -->
                        <VBox spacing="14" alignment="CENTER">
                            <Button text="Register"
                                    onAction="#registerUser"
                                    style="-fx-background-color: #009688;
                                           -fx-text-fill: white;
                                           -fx-font-size: 15px;
                                           -fx-font-weight: bold;
                                           -fx-background-radius: 8;
                                           -fx-cursor: hand;
                                           -fx-pref-width: 260;
                                           -fx-padding: 10 0;"/>

                            <Button text="Back to Login"
                                    onAction="#goBackToLogin"
                                    style="-fx-background-color: #ff9800;
                                           -fx-text-fill: white;
                                           -fx-font-size: 15px;
                                           -fx-font-weight: bold;
                                           -fx-background-radius: 8;
                                           -fx-cursor: hand;
                                           -fx-pref-width: 260;
                                           -fx-padding: 10 0;"/>
                        </VBox>
                    </VBox>
                </StackPane>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
