<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fitlife.StartScreenController" styleClass="root">

    <!-- App Title -->
    <Label text="FitLife Gym Management" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- Login Form -->
    <VBox spacing="15" alignment="CENTER" style="-fx-background-color: #2C2C3C; -fx-padding: 30; -fx-background-radius: 10;">
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Login" fx:id="loginBtn" prefWidth="100"/>
            <Button text="Register" fx:id="registerBtn" prefWidth="100"/>
            <Button text="Exit" fx:id="exitBtn" prefWidth="100"/>
        </HBox>
    </VBox>

    <!-- Footer / Small tagline -->
    <Label text="Â© 2025 FitLife Gym" style="-fx-font-size: 12px; -fx-text-fill: #AAAAAA;"/>

</VBox>
