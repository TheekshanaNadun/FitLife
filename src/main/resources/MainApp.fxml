<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<HBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fitlife.StartScreenController"
      spacing="0"
      style="-fx-font-family: 'Segoe UI'; -fx-background-color: linear-gradient(to right, #1e1e2f, #2c2c3c);">

    <!-- Left Panel: Branding -->
    <VBox alignment="CENTER"
          prefWidth="400"
          spacing="10"
          style="-fx-background-color: #2c2c3c;">
        <Label text="FitLife Gym"
               style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
        <Label text="Your Fitness, Your Way"
               style="-fx-text-fill: #a8a8a8; -fx-font-size: 16px;"/>
    </VBox>

    <!-- Right Panel: Login Card -->
    <VBox alignment="CENTER"
          prefWidth="500"
          style="-fx-background-color: #1e1e2f;">
        <VBox spacing="25"
              alignment="CENTER"
              style="-fx-background-color: #2c2c3c;
                     -fx-padding: 50;
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 8);">

            <Label text="Login"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField"
                       promptText="Username"
                       style="-fx-background-color: #3b3b4f;
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: #aaaaaa;
                              -fx-background-radius: 10;
                              -fx-padding: 10 15;
                              -fx-font-size: 14px;
                              -fx-border-color: transparent;
                              -fx-pref-width: 250;"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           style="-fx-background-color: #3b3b4f;
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: #aaaaaa;
                                  -fx-background-radius: 10;
                                  -fx-padding: 10 15;
                                  -fx-font-size: 14px;
                                  -fx-border-color: transparent;
                                  -fx-pref-width: 250;"/>

            <VBox spacing="12" alignment="CENTER">
                <Button fx:id="loginBtn" text="Login"
                        style="-fx-background-color: #4CAF50;
                               -fx-text-fill: white;
                               -fx-font-size: 15px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;
                               -fx-pref-width: 250;"/>
                <Button fx:id="registerBtn" text="Register"
                        style="-fx-background-color: #3b3b4f;
                               -fx-text-fill: white;
                               -fx-font-size: 15px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;
                               -fx-pref-width: 250;"/>
                <Button fx:id="exitBtn" text="Exit"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #aaaaaa;
                               -fx-font-size: 13px;
                               -fx-underline: true;
                               -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </VBox>
</HBox>
