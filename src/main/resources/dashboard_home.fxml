<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fitlife.DashboardHomeController"
      alignment="CENTER"
      spacing="60"
      stylesheets="@style.css"
      styleClass="card-container"
      fillHeight="false">

    <!-- 🧍 Manage Staff -->
    <StackPane fx:id="staffCard" styleClass="card" prefWidth="240" prefHeight="240">
        <VBox alignment="CENTER" spacing="12">
            <Label text="👤" styleClass="card-icon"/>
            <Label text="Manage Staff" styleClass="card-title"/>
            <Button text="Open" onAction="#openManageStaff" styleClass="card-button"/>
        </VBox>
    </StackPane>

    <!-- 🏋️ Manage Programs -->
    <StackPane fx:id="programCard" styleClass="card" prefWidth="240" prefHeight="240">
        <VBox alignment="CENTER" spacing="12">
            <Label text="🏋️" styleClass="card-icon"/>
            <Label text="Manage Programs" styleClass="card-title"/>
            <Button text="Open" onAction="#openManagePrograms" styleClass="card-button"/>
        </VBox>
    </StackPane>

</HBox>
