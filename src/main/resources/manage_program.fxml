<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fitlife.ManageProgramsController"
            stylesheets="@style.css"
            style="-fx-background-color: #f9fafc;"
            prefWidth="850" prefHeight="650">

    <!-- ðŸ”¹ Top Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 0, 1);">
            <Button text="â† Back" onAction="#goBack"
                    style="-fx-background-color: transparent; -fx-font-size: 14; -fx-text-fill: #333;"/>
            <Label text="Manage Programs" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- ðŸ”¹ Center Content -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER">
            <padding>
                <Insets top="25" right="20" bottom="25" left="20"/>
            </padding>

            <!-- ðŸ”¸ Form Section -->
            <GridPane hgap="20" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                </columnConstraints>

                <!-- Program Name -->
                <Label text="Program Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="programNameField" promptText="e.g. Yoga"
                           style="-fx-background-radius: 6; -fx-padding: 6;" prefWidth="220"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Cost per Session -->
                <Label text="Cost per Session (LKR):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="costField" promptText="e.g. 1000"
                           style="-fx-background-radius: 6; -fx-padding: 6;" prefWidth="150"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Description -->
                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="descriptionField" promptText="e.g. Strength and endurance training"
                           style="-fx-background-radius: 6; -fx-padding: 6;" prefWidth="300"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Trainer -->
                <Label text="Trainer:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="trainerField" promptText="e.g. Saman Perera"
                           style="-fx-background-radius: 6; -fx-padding: 6;" prefWidth="220"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- ðŸ”¸ Search Bar -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Search Program:" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
                <TextField fx:id="searchField"
                           promptText="Enter program name..."
                           onKeyReleased="#searchPrograms"
                           prefWidth="300"
                           style="-fx-background-radius: 6; -fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 6;"/>
            </HBox>

            <!-- ðŸ”¸ Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Add" onAction="#addProgram"
                        style="-fx-background-color: #00aaff; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Update" onAction="#updateProgram"
                        style="-fx-background-color: #ffaa00; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Delete" onAction="#deleteProgram"
                        style="-fx-background-color: #ff4b5c; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Clear" onAction="#clearAllPrograms"
                        style="-fx-background-color: #cccccc; -fx-text-fill: #333; -fx-background-radius: 6; -fx-font-weight: bold;"/>
            </HBox>

            <TableView fx:id="programTable"
                       prefHeight="380"
                       prefWidth="1150"
                       styleClass="modern-table"
                       style="-fx-background-radius: 6;
                  -fx-border-radius: 6;
                  -fx-border-color: #ddd;
                  -fx-background-color: white;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="colProgramId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colProgramName" text="Program Name" prefWidth="250"/>
                    <TableColumn fx:id="colCostPerSession" text="Cost (Rs.)" prefWidth="180"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="420"/>
                    <TableColumn fx:id="colTrainer" text="Trainer" prefWidth="220"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
