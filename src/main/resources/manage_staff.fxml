<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fitlife.ManageStaffController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f8f9fa;">

    <!-- 🟩 Top Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-padding: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3,0,0,1);">
            <Button text="← Back" onAction="#goBack"
                    style="-fx-background-color: transparent; -fx-font-size: 14;"/>
            <Label text="Manage Staff"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- 🟨 Center Content -->
    <center>
        <VBox spacing="25" alignment="TOP_CENTER" style="-fx-padding: 30;">

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5,0,0,3);">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" minWidth="200"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints halignment="LEFT" minWidth="200"/>
                </columnConstraints>

                <!-- Name -->
                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nameField" promptText="Enter full name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-background-radius: 5;"/>

                <!-- Gender -->
                <Label text="Gender:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="genderField" promptText="Select gender"
                          GridPane.rowIndex="0" GridPane.columnIndex="3"
                          style="-fx-background-radius: 5;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Male"/>
                            <String fx:value="Female"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Role -->
                <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="roleField" promptText="Select role"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"
                          style="-fx-background-radius: 5;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Trainer"/>
                            <String fx:value="Reception"/>
                            <String fx:value="Cleaner"/>
                            <String fx:value="Nutritionist"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Contact -->
                <Label text="Contact:" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                <TextField fx:id="contactField" promptText="e.g., 0771234567"
                           GridPane.rowIndex="1" GridPane.columnIndex="3"
                           style="-fx-background-radius: 5;"/>

                <!-- Email -->
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" promptText="e.g., example@mail.com"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"
                           style="-fx-background-radius: 5;"/>

                <!-- Salary -->
                <Label text="Salary (Rs):" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                <TextField fx:id="salaryField" promptText="Auto or manual input"
                           GridPane.rowIndex="2" GridPane.columnIndex="3"
                           style="-fx-background-radius: 5;"/>
            </GridPane>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Add" onAction="#addStaff"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Update" onAction="#updateStaff"
                        style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Delete" onAction="#deleteStaff"
                        style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
                <Button text="Clear" onAction="#clearAllStaff"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Table Section -->
            <TableView fx:id="staffTable" prefHeight="350" prefWidth="900"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ddd;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="colGender" text="Gender" prefWidth="80"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                    <TableColumn fx:id="colContact" text="Contact" prefWidth="120"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colSalary" text="Salary" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
